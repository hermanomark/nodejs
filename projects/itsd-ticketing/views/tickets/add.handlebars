<div class="row">
    <div class="col s12 m12 center-align">
        <h3 class="header">Ticket your concern</h3>
        <div class="card custom-card-form">
            <div class="card-content">
                <form action="/tickets" method="post">
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="input-field">
                                <label for="requestedBy">Requested By</label>
                                <input type="text" name="requestedBy">
                            </div>
                        </div>
                        <div class="col s12 m6">
                            <div class="input-field">
                                <select name="status" id="">
                                    <option value="public" selected>Information Technology</option>
                                    <option value="private">Finance</option>
                                    <option value="unpublished">Accounting</option>
                                    <option value="unpublished">Marketing</option>
                                    <option value="unpublished">Sales</option>
                                </select>
                                <label for="title">Department</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m4">
                            <div class="input-field">
                                <label for="local">Local</label>
                                <input type="number" name="local">
                            </div>
                        </div>
                        <div class="col s12 m4">
                            <div class="input-field">
                                <label for="typeOfWork">Type of Work</label>
                                <input type="text" name="typeOfWork">
                            </div>
                        </div>
                        <div class="col s12 m4">
                             <div class="input-field">
                                <label for="system">System</label>
                                <input type="text" name="system">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                             <div class="input-field">
                                <label for="problem">Problem</label>
                                <textarea name="problem" class="materialize-textarea" rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="input-field">
                                <select name="assignedTo" id="">
                                    <option value="hermano.mark.mh@gmail.com" selected>Mark Hermano</option>
                                    <option value="hermano.mark@yahoo.com">Mark Hermano Second</option>
                                </select>
                                <label for="title">Assigned To</label>
                            </div>
                        </div>
                        <div class="col s12 m6">
                             <div class="input-field">
                                <select name="assignedTo" id="">
                                    <option value="open" selected>Open</option>
                                    <option value="onprocess">On process</option>
                                    <option value="closed">Closed</option>
                                </select>
                                <label for="title">Status</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>