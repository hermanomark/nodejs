<div class="row">
    <div class="col s12 m12">
        <a href="/tickets/dashboard" class="waves-effect waves-light btn grey top-back-btn"><i class="fas fa-arrow-left"></i> Back</a>
        <h3 class="header">Update Ticket: <span class="uppercase">{{ticket.requestId}}</span></h3>
        <div class="card custom-card-form">
            <div class="card-content">
                <form action="/tickets/{{ticket.id}}?_method=PUT" method="post">
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="input-field">
                                <label for="requestId">Request ID</label>
                                <input type="text" name="requestId" value="{{ticket.requestId}}" readonly class="readonly">
                            </div>
                        </div>
                        <div class="col s12 m6">
                            <div class="input-field">
                                <label for="date">Date</label>
                                <input type="text" name="date" value="{{formatDate ticket.date 'MMMM Do YYYY'}}" readonly class="readonly">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="input-field">
                                <label for="requestedBy">Requested By</label>
                                <input type="text" name="requestedBy" value="{{user.name}}" readonly class="readonly">
                            </div>
                        </div>
                        <div class="col s12 m6">
                            <div class="input-field">
                                <select name="department" id="">
                                    {{#select ticket.department}}
                                    <option value="information_technology" selected>Information Technology</option>
                                    <option value="finance">Finance</option>
                                    <option value="accounting">Accounting</option>
                                    <option value="marketing">Marketing</option>
                                    <option value="sales">Sales</option>
                                    {{/select}}
                                </select>
                                <label for="department">Department</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 m4">
                            <div class="input-field">
                                <label for="local">Local</label>
                                <input type="number" name="local" value="{{ticket.local}}">
                            </div>
                        </div>
                        <div class="col s12 m4">
                            <div class="input-field">
                                <select name="typeOfWork" id="">
                                    {{#select ticket.typeOfWork}}
                                    <option value="software" selected>Software</option>
                                    <option value="technical">Technical</option>
                                    {{/select}}
                                </select>
                                <label for="typeOfWork">Type of Work</label>
                            </div>
                        </div>
                        <div class="col s12 m4">
                             <div class="input-field">
                                <select name="system" id="">
                                    {{#select ticket.system}}
                                    <option value="cf4_generator" selected>CF4 Generator</option>
                                    <option value="medsys">Medsys</option>
                                    <option value="bizbox">Bizbox</option>
                                    <option value="hris">HRIS</option>
                                    <option value="queueing">Queueing</option>
                                    {{/select}}
                                </select>
                                <label for="system">System</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                             <div class="input-field">
                                <label for="problem">Problem</label>
                                <textarea name="problem" class="materialize-textarea" rows="4">{{ticket.problem}}</textarea>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>