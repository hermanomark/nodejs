<div class="row">
    <div class="col s12 m6">
        <a href="/users" class="waves-effect waves-light btn grey top-back-btn"><i class="fas fa-arrow-left"></i> Back</a>
        <h3 class="header">Add a new user</h3>
        <div class="card">
            <div class="card-content ">
                <div class="row">
                    <form action="/users/add" method="post" class="col s12">
                        <div class="row">
                            <div class="input-field">
                                <input id="name" type="text" name="name" value={{name}}>
                                <label for="name">Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input id="email" type="email" name="email" value={{email}}>
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                             <p>
                                <label for="isSupport">
                                    <input type="checkbox" class="filled-in" id="isSupport" name="isSupport" {{#if isSupport}} checked="checked" {{/if}}/>
                                    <span>isSupport</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                             <p>
                                <label for="isUser">
                                    <input type="checkbox" class="filled-in" id="isUser" name="isUser" {{#if isUser}} checked="checked" {{/if}}/>
                                    <span>isUser</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                            <p>
                                <label for="isAdmin">
                                    <input type="checkbox" class="filled-in" id="isAdmin" name="isAdmin" {{#if isAdmin}} checked="checked" {{/if}}/>
                                    <span>isAdmin</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input id="password" type="password" name="password">
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input id="password2" type="password" name="password2">
                                <label for="password2">Confirm Password</label>
                            </div>
                        </div>
                        <button type="submit" class="btn">Add</bnutton>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
