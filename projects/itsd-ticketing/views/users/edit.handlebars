<div class="row">
    <div class="col s12 m6">
        <a href="/users" class="waves-effect waves-light btn grey top-back-btn"><i class="fas fa-arrow-left"></i> Back</a>
        <h3 class="header">Update user</h3>
        <div class="card">
            <div class="card-content ">
                <div class="row">
                    <form action="/users/add" method="post" class="col s12">
                        <div class="row">
                            <div class="input-field">
                                <input type="text" name="name">
                                <label for="name">Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input type="email" name="email">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                             <p>
                                <label for="isSupport">
                                    <input type="checkbox" class="filled-in" id="isSupport" name="isSupport" />
                                    <span>isSupport</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                             <p>
                                <label for="isUser">
                                    <input type="checkbox" class="filled-in" id="isUser" name="isUser" />
                                    <span>isUser</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                            <p>
                                <label for="isAdmin">
                                    <input type="checkbox" class="filled-in" id="isAdmin" name="isAdmin" />
                                    <span>isAdmin</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input type="password" name="password" value="{{password}}">
                                <label for="password">Password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field">
                                <input type="password" name="password2">
                                <label for="password2">Confirm Password</label>
                            </div>
                        </div>
                        <button type="submit" class="btn">Register</bnutton>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
