<div class="row">
    <div class="col s12 m6">
        <a href="/users" class="waves-effect waves-light btn grey top-back-btn"><i class="fas fa-arrow-left"></i> Back</a>
        <h3 class="header">Update user</h3>
        <div class="card">
            <div class="card-content ">
                <div class="row">
                    <form action="/users/{{user.id}}?_method=PUT" method="post" class="col s12">
                        <div class="row">
                            <div class="input-field">
                                <input id="name" type="text" name="name" value="{{user.name}}">
                                <label for="name">Name</label>
                            </div>
                        </div>
                        <div class="row">
                             <p>
                                <label for="isSupport">
                                    <input type="checkbox" class="filled-in" id="isSupport" name="isSupport" {{#if user.isSupport}} checked="checked" {{/if}} />
                                    <span>isSupport</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                             <p>
                                <label for="isUser">
                                    <input type="checkbox" class="filled-in" id="isUser" name="isUser" {{#if user.isUser}} checked="checked" {{/if}} />
                                    <span>isUser</span>
                                </label>
                            </p>
                        </div>
                        <div class="row">
                            <p>
                                <label for="isAdmin">
                                    <input type="checkbox" class="filled-in" id="isAdmin" name="isAdmin" {{#if user.isAdmin}} checked="checked" {{/if}} />
                                    <span>isAdmin</span>
                                </label>
                            </p>
                        </div>
                        <button type="submit" class="btn">Update</bnutton>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
