<div class="row">
    <div class="col s12 d-flex justify-content-between align-items-center">
        <h3>Accounts</h3>
        <a href="/users/add" class="waves-effect waves-light btn blue flow-btn">Add user</a>      
    </div>
    <table class="highlight">
        <thead>
          <tr>
              <th>Name</th>
              <th>Email</th>
              <th>isSupport</th>
              <th>isUser</th>
              <th>isAdmin</th>
              <th>Date</th>
              <th colspan="2">Customize</th>
          </tr>
        </thead>
        <tbody>
        {{#each users}}
            <tr>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{isSupport}}</td>
                <td>{{isUser}}</td>
                <td>{{isAdmin}}</td>
                <td>{{formatDate date 'MMMM Do YYYY'}}</td>
                <td><a class="btn left-align" href="/users/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
                </td>
                <td>
                    <form action="/users/{{id}}?_method=DELETE" method="post" id="delete-form" onsubmit="return confirm('Do you really want to delete user?');">
                        <input type="hidden" name="_method" value="DELETE">     <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>
      </table>
</div>